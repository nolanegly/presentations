@page
@model Volunteers.IndexModel
@{
    ViewData["Title"] = "Volunteers";
}

<h2>Volunteers</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                First
            </th>
            <th>
                Last
            </th>
            <th>
                Email
            </th>
            <th>
                Join Date
            </th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model.Data.Volunteers)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.JoinDateDisplay
                </td>
                <td>
                    <a asp-page="Detail" asp-route-id="@item.Id">Select</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>