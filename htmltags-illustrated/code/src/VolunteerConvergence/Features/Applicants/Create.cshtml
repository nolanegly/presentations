@page
@model Applicants.CreateModel
@{
    ViewData["Title"] = "Create Applicant";
}

<div class="container">
    <div class="row">
        <p />
    </div>
    <div class="row">
        <div class="col">
            <h4>Ajax post</h4>
            <form method="post" class="with-ajax">
                <div asp-validation-summary="All" class="text-danger" id="validationSummary"></div>

                <div class="form-group">
                    <label asp-for="Data.FirstName" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Data.FirstName" class="form-control"/>
                        <span asp-validation-for="Data.FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Data.LastName" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Data.LastName" class="form-control"/>
                        <span asp-validation-for="Data.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Data.Email" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Data.Email" class="form-control"/>
                        <span asp-validation-for="Data.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary"/>
                </div>

            </form>
        </div>

    </div>
</div>